    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:screenOrientation="portrait"
        tools:context=".MainActivity"
        android:background="@color/background_material_dark">

        <Button
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="Run"
            android:id="@+id/CoverArt"
            android:layout_toStartOf="@+id/spliter"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/spliter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffffffff" />

        <Button
            android:layout_width="20dp"
            android:layout_height="500dp"
            android:id="@+id/spliter"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:background="@color/background_material_dark" />

        <Button
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="My Playlists"
            android:id="@+id/My_Playlists"
            android:layout_toStartOf="@+id/spliter"
            android:layout_below="@+id/CoverArt"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/spliter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffffffff"
            android:visibility="visible" />

        <Button
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="Testing"
            android:id="@+id/play"
            android:layout_toStartOf="@+id/spliter"
            android:layout_below="@+id/My_Playlists"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/spliter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffffffff"
            android:visibility="invisible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/Play"
            android:layout_below="@+id/play"
            android:layout_toStartOf="@+id/spliter"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignLeft="@+id/play"
            android:layout_alignStart="@+id/play"
            android:layout_alignRight="@+id/play"
            android:layout_alignEnd="@+id/play"
            android:background="#ffffffff"
            android:visibility="invisible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stop"
            android:layout_toEndOf="@+id/spliter"
            android:layout_alignBottom="@+id/CoverArt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/spliter"
            android:text="Step Counter"
            android:background="#ffffffff"
            android:layout_alignParentTop="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:id="@+id/History"
            android:layout_alignTop="@+id/My_Playlists"
            android:layout_alignLeft="@+id/stop"
            android:layout_alignStart="@+id/stop"
            android:layout_alignBottom="@+id/My_Playlists"
            android:layout_alignRight="@+id/stop"
            android:layout_alignEnd="@+id/stop"
            android:background="#ffffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Library"
            android:id="@+id/skip"
            android:layout_alignTop="@+id/play"
            android:layout_toRightOf="@+id/spliter"
            android:layout_toEndOf="@+id/spliter"
            android:layout_alignBottom="@+id/play"
            android:background="#ffffffff"
            android:layout_alignRight="@+id/History"
            android:layout_alignEnd="@+id/History"
            android:visibility="invisible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:id="@+id/About"
            android:layout_toRightOf="@+id/Play"
            android:layout_alignTop="@+id/Play"
            android:layout_alignLeft="@+id/skip"
            android:layout_alignStart="@+id/skip"
            android:layout_alignRight="@+id/History"
            android:layout_alignEnd="@+id/History"
            android:background="#ffffffff"
            android:visibility="visible" />

    </RelativeLayout>